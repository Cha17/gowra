{
  "name": "worker",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:staging": "wrangler dev --env staging",
    "deploy": "wrangler deploy --minify",
    "deploy:staging": "wrangler deploy --env staging --minify",
    "deploy:production": "wrangler deploy --env production --minify",
    "test:staging": "node scripts/test-staging.js",
    "logs:staging": "wrangler tail --env staging",
    "logs:production": "wrangler tail --env production",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "db:generate:staging": "drizzle-kit generate --config=drizzle.config.staging.ts",
    "db:migrate:staging": "drizzle-kit migrate --config=drizzle.config.staging.ts",
    "db:push:staging": "drizzle-kit push --config=drizzle.config.staging.ts",
    "db:studio:staging": "drizzle-kit studio --config=drizzle.config.staging.ts",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "build": "tsc"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "bcrypt-ts": "^7.1.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.1",
    "jose": "^6.0.12",
    "kysely": "^0.28.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "wrangler": "^4.4.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@cloudflare/workers-types": "^4.0.0"
  }
}